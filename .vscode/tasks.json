{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Webpack watch",
            "type": "npm",
            "script": "watch",
            "group": "build",
            "isBackground": true,
            "auto": true,
            "problemMatcher": [{
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^Error: (.*):(\\d+):(\\d+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Built at: \\d{2}\/\\d{2}\/\\d{4} \\d+:\\d{2}:\\d{2} [AP]M",
                    "endsPattern": "^### end build output ###"
                }
            }, {
                "fileLocation": "absolute",
                "pattern": [{
                    "regexp": "^SassError: (.*)$",
                    "message": 1
                }, {
                    "regexp": "^\\s*on line (\\d+) of (.*)$",
                    "line": 1,
                    "file": 2
                }],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Built at: \\d{2}\/\\d{2}\/\\d{4} \\d+:\\d{2}:\\d{2} [AP]M",
                    "endsPattern": "^### end build output ###"
                }
            }]
        }
    ]
}
