{
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": true,
        "sourceMap": true,
        "module": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "ES2017",
        "baseUrl": "."
    },
    "include": [
        "src/**/*.ts",
        "lib/**/*.ts",
        "test/**/*.ts"
    ]
}
